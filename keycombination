<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Key Combination Test</title>
</head>
<body>
    <h1>Press Alt+Shift+A to Trigger the Action</h1>
    <script>
        document.addEventListener('keydown', function(event) {
            console.log(event.key, event.altKey, event.shiftKey); // Log the key and modifier states
            if (event.altKey && event.shiftKey && event.key === 'A') {
                console.log("Key combination detected! Redirecting...");
                window.location.href = "https://www.poki.com"; // Redirects to poki.com
            }
        });
    </script>
</body>
</html>
